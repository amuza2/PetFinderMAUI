<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetFinderMAUI.Pages.SettingsPage">
    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <!-- LogOut Button -->
            <Button Text="Log out"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="20"
                    x:Name="LogOutBtn"
                    Clicked="OnLogoutClicked"
                    HorizontalOptions="Center"
                    WidthRequest="100"
                    HeightRequest="30"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>