<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetFinderMAUI.Pages.LoginPage"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             Title="LoginPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
        <!-- Welcome Back Text -->
        <Label Text="WELCOME BACK mohamed !"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>

        <!-- Illustration Image -->
        <Image Source="dotnet_bot.png"
               WidthRequest="300"
               HeightRequest="200"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>

        <!-- Email Entry -->
        <material:TextField Title="Email"
                            Icon="{FontImageSource FontFamily=MaterialRegular, Glyph={x:Static m:MaterialRegular.Email}}"
                            Margin="0,10,0,0"
                            HeightRequest="50"
                            AllowClear="True"/>

        <!-- Password Entry -->
        <material:TextField Title="Password"
                            Margin="0,10,0,0"
                            HeightRequest="50"
                            IsPassword="True">
            <material:TextField.Attachments>
                <material:TextFieldPasswordShowHideAttachment/>
            </material:TextField.Attachments>
        </material:TextField>

        <!-- Login Button -->
        <Button Text="LOGIN"
                BackgroundColor="Purple"
                TextColor="White"
                CornerRadius="20"
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="50"
                Margin="0,20,0,0"/>

        <!-- Forgot Password Link -->
        <Label Text="Forgot password?"
               HorizontalOptions="Center"
               TextColor="Gray"
               Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>