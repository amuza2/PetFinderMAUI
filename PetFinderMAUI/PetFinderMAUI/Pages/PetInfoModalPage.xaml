<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#aa000000"
             x:Class="PetFinderMAUI.Pages.PetInfoModalPage">
    <ContentPage.Content>
        <Grid>
            <Border
                VerticalOptions="End"
                Background="White"
                StrokeShape="{RoundRectangle CornerRadius=20}"
                Margin="30"
                Padding="30">
                <StackLayout>
                    <Label Text="Contact pet keeper" FontFamily="NunitoBold" FontSize="24" FontAttributes="Bold"
                           HorizontalOptions="CenterAndExpand" Margin="0,0,0,5"/>
                    <Label x:Name="Username" FontFamily="NunitoBold" FontSize="20" />
                    <Label x:Name="Email" FontFamily="NunitoBold" FontSize="20" />
                    <Label x:Name="PhoneNumberLabel" FontSize="20" />
                    <Button Text="Make call" FontFamily="NunitoBold" Clicked="OnCopyPhoneNumberClicked" />
                </StackLayout>
            </Border>
        </Grid>
    </ContentPage.Content>
</ContentPage>